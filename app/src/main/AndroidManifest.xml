<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aakanshaparmar.blackboxsystem" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ElderlyRegisterEnterName"
            android:configChanges="orientation"
            android:label="@string/title_activity_elderly_register_enter_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name=".ElderlyRegisterPhoneNo"
            android:configChanges="orientation"
            android:label="@string/title_activity_elderly_register_phone_no"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name=".ElderlyRegisterAddress"
            android:configChanges="orientation"
            android:label="@string/title_activity_elderly_register_address"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name=".ElderlyRegisterPageFinal"
            android:configChanges="orientation"
            android:label="@string/title_activity_elderly_register_page_final"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ElderlyHomePage"
            android:configChanges="orientation"
            android:label="@string/title_activity_elderly_home_page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".FamilyRegisterName"
            android:label="@string/title_activity_family_register_name"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name=".FamilyRegisterPhone"
            android:configChanges="orientation"
            android:label="@string/title_activity_family_register_phone"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name=".FamilyRegisterElderlyPhone"
            android:configChanges="orientation"
            android:label="@string/title_activity_family_register_elderly_phone"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name=".FamilyRegisterAddress"
            android:configChanges="orientation"
            android:label="@string/title_activity_family_register_address"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name=".FamilyRegisterEmailID"
            android:configChanges="orientation"
            android:label="@string/title_activity_family_register_email_id"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name=".FamilyRegisterCommonPassword"
            android:configChanges="orientation"
            android:label="@string/title_activity_family_register_common_password"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name=".FamilyRegisterFinal"
            android:configChanges="orientation"
            android:label="@string/title_activity_family_register_final"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ElderlyShowCommonPass"
            android:configChanges="orientation"
            android:label="@string/title_activity_elderly_show_common_pass"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".FamilyHomePage"
            android:configChanges="orientation"
            android:label="@string/title_activity_family_home_page"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
