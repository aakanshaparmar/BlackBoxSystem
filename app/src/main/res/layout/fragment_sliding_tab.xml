<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aakanshaparmar.blackboxsystem.SlidingTabFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Directions on Map"
        android:id="@+id/MapDir"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="30dp"/>

    <Button
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:text="Turn By Turn Navigation"
        android:id="@+id/TurnNav"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="30dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="horizontal">

        <Button
            android:layout_width="164dp"
            android:layout_height="125dp"
            android:text="Address Card for Taxi"
            android:id="@+id/AddCard"
            android:layout_marginTop="5dp"
            android:textSize="30dp" />

        <Button
            android:layout_width="164dp"
            android:layout_height="130dp"
            android:text="Call An Uber"
            android:id="@+id/Uber"
            android:layout_marginTop="20dp"
            android:textSize="30dp"/>

     </LinearLayout>



</LinearLayout>
