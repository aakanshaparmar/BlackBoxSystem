<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aakanshaparmar.blackboxsystem.SlidingTabFragment2"
    android:background="@color/white">

    <Button
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:text="Find Nearest Hospitals"
        android:id="@+id/hospButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:background="@color/appBlue"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        />

    <Button
        android:layout_width="255dp"
        android:layout_height="107dp"
        android:text="Find Nearest Police Stations"
        android:id="@+id/polButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:background="@color/appBlue"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        />

    <Button
        android:layout_width="262dp"
        android:layout_height="107dp"
        android:text="Call Police Emergency Number"
        android:id="@+id/emerButton"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:background="@color/appBlue"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:layout_gravity="center"
        android:paddingBottom="20dp"
        />

</LinearLayout>