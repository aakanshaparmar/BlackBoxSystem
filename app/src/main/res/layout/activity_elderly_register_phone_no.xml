<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aakanshaparmar.blackboxsystem.ElderlyRegisterPhoneNo"
    android:background="@color/white">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Assistance"
        android:src="@drawable/speaker_icon"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title"
        android:layout_gravity="right"
        android:background="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/enterPhoneNo"
        android:id="@+id/enterPhoneNo1"
        android:textStyle="bold"
        android:textSize="27dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="20"
        android:id="@+id/editText1"
        android:layout_below="@+id/enterName1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continueButton"
            android:id="@+id/button1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:height="60dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@color/appBlue"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>



</LinearLayout>
